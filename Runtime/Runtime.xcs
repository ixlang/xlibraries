package Runtime{

	class rtlp{
		static int rtl_osid = _system_.getPlatformId();
    };
    
	class UnixlikeApi : Library{
		static bool loaded = false;
		
		static bool load(){
			if (loaded == false){
				try{
					if (rtlp.rtl_osid == 1){
						loadLibrary("libc.so.6");
                    }else{
						loadLibrary("libc.dylib");
                    }
					loaded = true;
				}catch(Exception e){
					_system_.output(e.getMessage());
				}
			}
			return loaded;
		}
            
		import{
			 Pointer cdecl readlink (String __path,
			 ObjectPtr __buf, Pointer __len);
             int cdecl kill(int pid, int sig);
        };
    };
	class Win32Api{
    
		static class Psapi32 : Library{
        
			static bool loaded = false;
            
            static bool load(){
