            static const int MAX_PATH = 260,
            TH32CS_SNAPHEAPLIST     = 1,
			TH32CS_SNAPPROCESS      = 2,
			TH32CS_SNAPTHREAD       = 4,
			TH32CS_SNAPMODULE       = 8,
			TH32CS_SNAPALL          = TH32CS_SNAPHEAPLIST | TH32CS_SNAPPROCESS | TH32CS_SNAPTHREAD | TH32CS_SNAPMODULE;
            
